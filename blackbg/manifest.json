{
  "manifest_version": 2,
  "name": "BlackBg",
  "version": "1.0",
  "description": "Turn your favourite websites black!",
  "options_page": "views/options.html",
  "browser_action": {
    "default_title": "Turn off the light.",
    "default_popup": "views/popup.html"
  },
  "permissions": [
    "storage",
    "tabs"
  ],
  "content_scripts": [
    {
      "matches": [
        "<all_urls>"
      ],
      "js": [
        "scripts/jquery-3.4.1.min.js",
        "scripts/blackbg.js"
      ]
    }
  ]
}
